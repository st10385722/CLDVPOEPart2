@model ProductDto
@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit a product</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Product ID</label>
                <div class="col-sm-8">
                    <input type="hidden" asp-for="ProductId"/>
                    <input class="form-control" value="@ViewData["ProductId"]" disabled/>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductName" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductPrice" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductCategory" />
                    <span asp-validation-for="ProductCategory" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Availability</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductAvailability" />
                    <span asp-validation-for="ProductAvailability" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-8">
                    <img src="/images/products/@ViewData["ImageFileName"]" width="150" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductImageFile" type="file" />
                    <span asp-validation-for="ProductImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn" style="color:white; border:green solid;">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn" style="color:white; border:aqua solid;" asp-controller="Products" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

